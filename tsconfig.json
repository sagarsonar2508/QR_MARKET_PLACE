{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}